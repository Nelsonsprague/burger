<h1>Boogy for Burgers!</h1>

<h2>Burgers you know you want to devour:</h2>

<ul>
    {{#each burgers}}
    {{ id }}: {{ burger_name }} <button class="delete-burger" data-id="{{id}}">Devour!</button><br><br>
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
    <button type="submit">Create Burger With Love</button>
  </div>
</form>

